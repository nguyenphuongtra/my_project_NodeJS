          <a href="/users/logout" class="logout">Đăng xuất (<%= user.name %>)</a>
        <% } else { %>
          <a href="/users/login" class="login">Đăng nhập</a>
          <a href="/users/register" class="register">Đăng ký</a>
        <% } %>
        <% if (user && user.role === 'admin') { %>
          <a href="/admin">Admin</a>
        <% } %>
