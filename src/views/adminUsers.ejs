<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Quản lý Người dùng</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="admin-section">
    <h2>Quản lý Người dùng</h2>
    <table class="admin-table">
      <thead>
        <tr>
          <th>Tên</th>
          <th>Email</th>
          <th>Vai trò</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% if (users.length === 0) { %>
          <tr>
            <td colspan="4" style="text-align:center;">Không có người dùng nào</td>
          </tr>
        <% } else { %>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.role %></td>
              <td>
                <a href="/admin/users/edit/<%= user._id %>" class="btn-edit">Sửa</a>
                <a href="/admin/users/delete/<%= user._id %>" class="btn-delete" onclick="return confirm('Bạn có chắc muốn xoá người dùng này?');">Xoá</a>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
