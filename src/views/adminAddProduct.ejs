<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Thêm Sản phẩm Mới</title>
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <%- include('partials/header') %>

  <main class="admin-section">
    <h2>Thêm Sản phẩm Mới</h2>
    <form action="/admin/products/add" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Tên Sản phẩm:</label>
        <input type="text" id="name" name="name" placeholder="Nhập tên sản phẩm" required>
      </div>
      <div class="form-group">
        <label for="description">Mô tả:</label>
        <textarea id="description" name="description" placeholder="Nhập mô tả sản phẩm" required></textarea>
      </div>
      <div class="form-group">
        <label for="price">Giá (VND):</label>
        <input type="number" id="price" name="price" placeholder="Nhập giá sản phẩm" required>
      </div>
      <div class="form-group">
        <label for="stock">Số lượng tồn:</label>
        <input type="number" id="stock" name="stock" placeholder="Nhập số lượng tồn" required>
      </div>
      <div class="form-group">
        <label for="brand">Thương hiệu:</label>
        <input type="text" id="brand" name="brand" placeholder="Nhập thương hiệu sản phẩm">
      </div>
      <div class="form-group">
        <label for="category">Danh mục:</label>
        <select id="category" name="category" required>
          <% categories.forEach(cat => { %>
            <option value="<%= cat._id %>"><%= cat.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="images">Ảnh sản phẩm:</label>
        <input type="file" id="images" name="images" accept="image/*" multiple>
      </div>
      <button type="submit" class="btn-submit">Thêm Sản phẩm</button>
    </form>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
